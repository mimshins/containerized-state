{
  "name": "containerized-state-plugin-persistence",
  "version": "1.1.0",
  "description": "Persistence plugin for containerized-state that adds localStorage/sessionStorage support with TTL and error handling.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "keywords": [
    "state",
    "state management",
    "containerized",
    "persistence",
    "localstorage",
    "storage"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mimshins/containerized-state.git"
  },
  "bugs": {
    "url": "https://github.com/mimshins/containerized-state/issues"
  },
  "author": {
    "name": "Mostafa Shamsitabar",
    "email": "mostafa.sh.coderino@gmail.com"
  },
  "license": "MIT",
  "peerDependencies": {
    "containerized-state": "^3"
  },
  "scripts": {
    "clear": "shx rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "prebuild": "pnpm run clear",
    "build": "tsdown",
    "release": "pnpm publish . --tag latest --access public --no-git-checks"
  }
}
